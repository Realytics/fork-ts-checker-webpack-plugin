{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES6"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./lib"
  },
  "include": ["./src"]
}
