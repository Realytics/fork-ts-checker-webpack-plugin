    alias: {
      "@project-references-fixture/shared": path.resolve(__dirname, "packages/shared/src")
    }
  },
  plugins: [
    new ForkTsCheckerWebpackPlugin({
      async: ${ASYNC},
      typescript: {
        build: true
      }
    })
  ]
};


